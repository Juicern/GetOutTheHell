<scroll-view bindscroll="onScroll" bindscrolltolower="isEnd" bindtouchend="touchEnd" bindtouchstart="touchStart" class="tloader state-{{loaderState}}" enableBackToTop="true" lowerThreshold="100" scrollY="true" style="height:{{height}}">
    <view class="tloader-symbol" style="height: {{pullDownHeight>50?50:pullDownHeight}}px" wx:if="{{loaderState!='reset'}}">
        <view class="tloader-msg">
            <text></text>
        </view>
        <view class="tloader-loading">
            <text class="ui-loading"></text>
        </view>
    </view>
    <view bindtouchmove="touchMove" class="tloader-body" style="transform: translateY({{pullDownHeight+'px'}})">
        <slot></slot>
        <view class="empty-box" wx:if="{{isEmpty}}">
            <van-loading vertical color="#666" loadingTextColor="#fff" wx:if="{{loading}}">数据加载中...</van-loading>
            <view wx:else>
                <image class="empty-icon" src="data:image/png;base64,"></image>
        {{emptyText}}
      </view>
        </view>
    </view>
</scroll-view>
